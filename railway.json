{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "staticAssetsPath": "dist",
    "rewrites": [
      {
        "source": "*",
        "destination": "/index.html"
      }
    ]
  }
}

